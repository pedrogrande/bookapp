<h1>Book app</h1>
<h3>Featured books</h3>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Author</th>
      <th>Image</th>
      <th>Featured</th>
    </tr>
  </thead>

  <tbody>
    <% @featured_books.each do |book| %>
      <tr>
        <td><%= book.category.name %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.image %></td>
        <td><%= book.featured %></td>
      </tr>
    <% end %>
  </tbody>
</table>
